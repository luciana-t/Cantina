<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mensagens"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="380dp"
            android:background="@color/bee"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mensagens"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="7pt"/>

            <EditText
                android:id="@+id/et_mensagem"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:inputType="textCapSentences"
                android:lines="5"
                android:maxLength="300"
                android:singleLine="false" />
            <RadioGroup
                android:id="@+id/radiogrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_meunome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meu nome"
                    android:layout_marginRight="15dp"/>
                <RadioButton
                    android:id="@+id/rb_anonimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AnÃ´nimo"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_voltar_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Voltar"
                android:background="@color/colorPrimary"
                android:onClick="onClickVoltarMensagem"/>

            <Button
                android:id="@+id/btn_enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Enviar"
                android:background="@color/colorPrimary"
                android:onClick="onCLickEnviar"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>